<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <MudButton OnClick="LogOut"
                       StartIcon="@Icons.Material.Filled.Logout"
                       Color="Color.Primary"
                       Variant="Variant.Outlined">
                Wyloguj się
            </MudButton>
        </Authorized>
        <NotAuthorized>
            <MudButton OnClick="OpenLoginDialog"
                       StartIcon="@Icons.Material.Filled.Login"
                       Color="Color.Primary"
                       Variant="Variant.Outlined">
                Zaloguj się
            </MudButton>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>